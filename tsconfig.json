{
  "compilerOptions": {
    "declaration": true,        // Genera archivos de declaración .d.ts para cada archivo TypeScript.
    "declarationDir": "./dist", // Especifica el directorio donde se guardarán las declaraciones.
    "outDir": "./dist",          // Directorio de salida para los archivos compilados
    "rootDir": "./src",          // Directorio raíz de los archivos TypeScript
    "strict": true,              // Activar las comprobaciones estrictas
    "esModuleInterop": true,      // Interoperabilidad con módulos ES
    "jsx": "react-jsx"
  },
  "include": ["src/**/*.ts", "custom.d.ts"],
  "exclude": ["node_modules"]
}
